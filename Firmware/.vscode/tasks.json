{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "make flash",
            "problemMatcher": []
        },
        {
            "label": "openocd_flash",
            "type": "shell",
            "command": "D:/Program Files/openocd-v0.12.0-rc2-i686/bin/openocd.exe",
            "args": [
                "-f",
                "D:/Program Files/openocd-v0.12.0-rc2-i686/share/openocd/scripts/interface/cmsis-dap.cfg",
                "-f",
                "D:/Program Files/openocd-v0.12.0-rc2-i686/share/openocd/scripts/target/stm32f4x.cfg",
                "-c",
                "program build/ODriveFirmware.elf verify reset exit"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "dependsOn": "Build"
        },
    ]
}
